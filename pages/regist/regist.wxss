  width: 4rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.base-title-txt {
  font-size: 30rpx;
  color: #333;
}

.info-item {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 18rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.tip-style {
  color: #b7b8bd;
  font-size: 30rpx;
  margin-top: 5rpx;
}

input{
