/* pages/registed/registed.wxss */

.base-item{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  background-color: #f5f5f5;
}
.base-title {  
  height: 75rpx;
  align-items: center;
  display: flex;
}

.base-title-line {
  background-color: #1472f3;
  width: 4rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.base-title-txt {
  font-size: 34rpx;
  color: #333;
}

.update{
  color: #1472f3;
  font-size: 24rpx;
  margin-right: 30rpx;
}

.item-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 90rpx;
}

.item-info-title{
  font-size: 26rpx;
  color: #333;
}

.item-info-value{
  font-size: 26rpx;
  color: #B7B8BD;
}

.item-header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
}