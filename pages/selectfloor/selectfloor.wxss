/* pages/selectfloor/selectfloor.wxss */

.position {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
}

.big-circle {
  background-color: rgba(20, 114, 243, 0.3);
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.small-circle {
  background-color: rgba(20, 114, 243, 0.6);
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lift-name {
  font-size: 30rpx;
  color: #333;
  margin-left: 16rpx;
}

.icon-floor {
  transform: rotate(90deg);
  margin-left: 20rpx;
}

.kuang {
  display: flex;
  justify-content: center;
}

.kuang-item {
  height: 90rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  width: 80%;
  border: 1rpx solid rgba(20, 114, 243, 1);
  border-radius: 12rpx;
  box-shadow: 0 rpx 1rpx 12rpx 0rpx rgba(20, 114, 243, 0.5);
  margin-top: 16rpx;
}

.run{
  color: #1472F3;
  font-size: 29rpx;
}

.floor-btn{
  width: 78rpx;
  height: 78rpx;
  display: flex;
  border-radius: 100%;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.btn-unselected{
  border: 1px solid rgba(153, 153, 153, 1);
  background: rgba(250, 250, 250, 1);
}

.btn-selected{
  border: 0px solid rgba(153, 153, 153, 1);
  background: rgba(20, 114, 243, 1);
}

.btn-lists{
   display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.btn-lists-all{
  width: 190rpx;
   display: flex;
  align-items: center;
  justify-content: center;
   flex-wrap: wrap;
}

.btn-text-selected{
  font-size: 30rpx;
  color: white;
}

.btn-text-unselected{
  font-size: 30rpx;
  color: #666;
}