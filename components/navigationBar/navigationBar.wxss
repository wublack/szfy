/* components/navigationBar/navigationBar.wxss */
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  
}
.nav-title{
  height: 45px;
  line-height: 45px;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:36rpx;
  letter-spacing:2px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.bg-white{
  background-color: #ffffff;
}

.right-content{
  flex: 1;
 
}

.left-content{
  flex: 1;
}

.middle-content{
  flex: 1.3;
  display: flex;
  align-items: center;
  justify-content: center;
}